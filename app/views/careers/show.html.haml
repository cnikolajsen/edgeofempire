- content_for :title do
  = @career.name

.row
  .small-12.columns
    %h1= @career.name

.row
  .small-12.columns
    %p= @career.description.html_safe

    %h2 Specializations
    - @career.talent_trees.each_with_index do |tree, i|
      .row
        .small-12.columns
          %a{:name => tree.name}
          %h4= tree.name
          %p= tree.description.html_safe

          %ul.small-block-grid-4.talent-tree
            = render :partial => 'career_talent_tree_box', :locals => { :talent_tree => tree, :row => 1, :column => 1} unless tree.talent_1_1.nil?
