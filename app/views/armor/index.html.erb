<%- model_class = Armor -%>
<div class="row">
  <div class="small-12 columns">
    <h1>Armor</h1>
    <dl class="sub-nav">
      <dd<% if current_page('armor') %> class="active"<% end %>><%= link_to "Armor", "/armor" %></dd>
      <dd<% if current_page('armor_qualities') %> class="active"<% end %>><%= link_to "Qualities", armor_qualities_path %></dd>
      <dd<% if current_page('armor_attachments') %> class="active"<% end %>><%= link_to "Attachments", armor_attachments_path %></dd>
    </dl>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:defense) %></th>
          <th><%= model_class.human_attribute_name(:soak) %></th>
          <th><%= model_class.human_attribute_name(:price) %></th>
        </tr>
      </thead>
      <tbody>
        <% @armor.each do |armor| %>
          <tr>
            <td><%= link_to armor.name, armor_path(armor) %></td>
            <td><%= armor.defense %></td>
            <td><%= armor.soak %></td>
            <td><%= armor.price %></td>
          </tr>
        <% end %>
    </tbody>
    </table>
  </div>
</div>
