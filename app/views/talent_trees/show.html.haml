      = render :partial => 'careers/career_talent_tree_box', :locals => { :talent_tree => @talent_tree, :row => 5, :column => 4} unless @talent_tree.talent_5_4.nil?

.row
  .small-12.columns
    .button-bar
      %ul.button-group.round
        %li= link_to "<i class='fi-arrow-left'> Back</i>".html_safe, |
            talent_trees_path, :class => 'tiny secondary button'         |
        - if can? :manage, @talent_tree
          %li= link_to "<i class='fi-pencil'> Edit</i>".html_safe, edit_talent_tree_path(@talent_tree), :class => 'tiny success button'
          %li= link_to "<i class='fi-trash'> Destroy</i>".html_safe, @talent_tree, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'tiny alert button'
