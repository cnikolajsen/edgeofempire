= simple_form_for @weapon_quality, html: { class: 'form-horizontal' } do |f|
  - if @weapon_quality.errors.any?
    .alert-box.warning.radius{"data-alert" => ""}
      %p
        = pluralize(@weapon_quality.errors.count, "error")
        prohibited this weapon from being saved:
      %ul
        - @weapon_quality.errors.full_messages.each do |msg|
          %li= msg

  .row
    .medium-6.small-12.columns
      .row
        .small-3.columns
          = f.label :name, :class => 'inline right'
        .small-9.columns
          = f.input :name, :placeholder => 'Weapon quality name', label: false
      .row
        .small-3.columns
          = f.label :trigger, :class => 'inline right'
        .small-9.columns
          = f.input :trigger, :placeholder => 'Weapon quality trigger', label: false
      .row
        .small-3.columns
          = f.label :description, :class => 'inline right'
        .small-9.columns
          = f.input :description, :placeholder => 'Weapon quality description', label: false

  .row
    .small-12.columns
      .form-actions
        = f.submit nil, :class => 'button'
        = link_to t('.cancel', :default => t("helpers.links.cancel")), |
          weapon_qualities_path, :class => 'button secondary'
