<%= form_for @character, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :species, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :species, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gender, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gender, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :age, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :age, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :career, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :career, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :brawn, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :brawn, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :agility, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :agility, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :intellect, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :intellect, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cunning, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :cunning, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :willpower, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :willpower, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :presence, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :presence, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                characters_path, :class => 'btn' %>
  </div>
<% end %>
