<div class="row">
  <div class="small-12 columns">
    <h1><%=t '.title', :default => "#{@character.name} - Species" %></h1>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <%= render :partial => 'character_edit_menu' %>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <%= form_for @character, :html => { :class => 'form-horizontal' } do |f| %>
      <%= hidden_field_tag 'character_species', 'true' %>
      <%= hidden_field_tag 'original_race_id', @character.race_id %>
      <% if @character.errors.any? %>
        <div data-alert class="alert-box warning radius">
          <p><%= pluralize(@character.errors.count, "error") %> prohibited this character from being saved:</p>
          <ul>
            <% @character.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= select('character', 'race_id', Race.where(:true).collect  {|race| [race.name, race.id]}, {:prompt => "Select species"}, :class => 'input-block-level') %>

      <div class="panel" id="species-info">
        <% unless @character.race_id.blank? %>
          <h4><%= @character.race.name %></h4>
          <%= @character.race.description.gsub("\n", "<br />").html_safe %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Brawn</th>
                <th>Cunning</th>
                <th>Presence</th>
                <th>Agility</th>
                <th>Intellect</th>
                <th>Willpower</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @character.race.brawn %></td>
                <td><%= @character.race.cunning %></td>
                <td><%= @character.race.presence %></td>
                <td><%= @character.race.agility %></td>
                <td><%= @character.race.intellect %></td>
                <td><%= @character.race.willpower %></td>
              </tr>
            </tbody>
          </table>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Wound Threshold</th>
                <th>Strain Threshold</th>
                <th>Starting Experience</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @character.race.wound_threshold %></td>
                <td><%= @character.race.strain_threshold %></td>
                <td><%= @character.race.starting_experience %></td>
              </tr>
            </tbody>
          </table>

          <h4>Special Ability</h4>
          <% unless @character.race.skills.nil? %>
            <% @character.race.race_skills.each do |race_skill| %>
              <p>Add <%= pluralize(race_skill.ranks, 'rank') %> in <%= race_skill.skill.name %> skill.</p>
            <% end %>
          <% end %>
          <% unless @character.race.talents.nil? %>
            <% @character.race.race_talents.each do |race_talent| %>
              <p>Add <%= pluralize(race_talent.ranks, 'rank') %> in <%= race_talent.talent.name %> talent.</p>
            <% end %>
          <% end %>
          <p><%= text_replace_tokens(@character.race.special_ability.gsub("\n", "<br />")).html_safe %></p>
        <% end %>
      </div>

      <div class="form-actions">
        <%= hidden_field_tag 'destination', 'species' %>
        <%= f.submit "Save species", :class => 'button' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                characters_path, :class => 'button secondary' %>
      </div>
    <% end %>
  </div>
</div>