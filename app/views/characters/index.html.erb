<%- model_class = Character -%>
<div class="row">
  <div class="medium-12 columns">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  </div>
</div>
<div class="row">
  <div class="medium-12 columns">
    <table>
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th></th>
          <th><%= model_class.human_attribute_name(:race_id) %></th>
          <th><%= model_class.human_attribute_name(:career_id) %></th>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @characters.each do |character| %>
          <tr>
            <td><%= link_to character.name, character_path(character) %></td>
            <td>
              <% if character.creation? %>
                  <span class="label label-warning" title="Character creation mode"><i class='icon-wrench'></i></span>
              <% elsif character.active? %>
                  <span class="label label-success" title="Active character"><i class='icon-ok'></i></span>
              <% elsif character.retired? %>
                  <span class="label label-inverse" title="Character retired"><i class='icon-fire'></i></span>
              <% end %>
            </td>
            <td><%= character.race.name %></td>
            <td><%= character.career.name %></td>
            <td><%=l character.created_at, :format => :short %></td>
            <td>
              <div class="button-bar">
                <ul class="button-group round">
                  <li><%= link_to "PDF", character_path(character, :format => 'pdf'), :class => 'button tiny success', :target => "_blank" %></li>
                  <li><%= link_to "Edit".html_safe, edit_character_path(character), :class => 'button tiny' %></li>
                  <li><%= link_to "Delete", character_path(character),
                                        :method => :delete,
                                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                        :class => 'button alert tiny' %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to t('.new', :default => t("helpers.links.new")),
            new_character_path,
            :class => 'button radius' %>
  </div>
</div>
