<%- model_class = Obligation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th width="80">d100 roll</th>
      <th>Obligation Type</th>
    </tr>
  </thead>
  <tbody>
    <% @obligations.each do |obligation| %>
      <tr>
        <td><%= obligation.range %></td>
        <td><strong><%= obligation.name %></strong>: <%= text_replace_tokens(obligation.description) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
