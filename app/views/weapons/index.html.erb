<%- model_class = Weapon -%>
<div class="row">
  <div class="small-12 columns">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
    <dl class="sub-nav">
        <dd<% if current_page('weapons') %> class="active"<% end %>><%= link_to "Weapons", weapons_path %></dd>
        <dd<% if current_page('weapon_qualities') %> class="active"<% end %>><%= link_to "Qualities", weapon_qualities_path %></dd>
        <dd<% if current_page('weapon_attachments') %> class="active"<% end %>><%= link_to "Attachments", weapon_attachments_path %></dd>
      </dl>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-4" id="item-grid">
      <% @weapons.each do |weapon| %>
      <li>
        <ul class="pricing-table">
          <li class="title"><%= weapon.name %></li>
          <li class="price"><%= image_tag("credit_symbol.png", :class => "credit-icon", :title => "Credits")%> <%= weapon.price %></li>
          <li class="description"><%= text_replace_tokens(weapon.description).html_safe %></li>
          <li class="bullet-item"><%= weapon.skill.name unless weapon.skill.nil? %></li>
          <li class="bullet-item">Range: <%= weapon.range %></li>
          <li class="bullet-item">Damage: <%= weapon.damage %></li>
          <li class="bullet-item">Crit rating: <%= weapon.crit %></li>
          <li class="bullet-item">Enc: <%= weapon.encumbrance %></li>
          <li class="bullet-item">Rarity: <%= weapon.rarity %></li>
          <li class="bullet-item"><%= render "weapons/weapon_qualities", :qualities => weapon.weapon_quality_ranks %></li>
          <% unless weapon.weapon_models.blank? %>
            <li class="title">Models include</li>
            <% weapon.weapon_models.each do |model| %>
            <li class="bullet-item"><%= model.name %></li>
            <% end -%>
          <% end -%>
        </ul>
      </li>
      <% end %>
    </ul>
  </div>
</div>